@using CPSS.Common.Core.Mvc.UIControl
@using CPSS.Service.ViewService.ViewModels.HeadButtons.Respond

@{
    ViewBag.Title = "AddClient";

    WorkContext.Resource
        //.AddPageCss("")
        .AddPageScripts("easyui-1.5/locale/easyui-lang-zh_CN", "grid/tablegrid", "controlshelper", "basic/client/addclient");
    var buttonModel = new List<RespondHeadButtonsViewModel>
    {
        new RespondHeadButtonsViewModel{ ButtonName = "rtBasicClient_TB_Add_Save", ButtonText = "保存"},
        //new RespondHeadButtonsViewModel{ ButtonName = "rtBasicClient_TB_Add_Save_Go", ButtonText = "保存并继续"},
        new RespondHeadButtonsViewModel{ ButtonName = "rtBasicClient_TB_Add_Cancel", ButtonText = "取消"},
    };
}
@section buttons{
    @Html.Partial("~/Views/Shared/CommonPartial/HeadButtons.cshtml", buttonModel)
}

<div id="billhead" class="easyui-panel" data-options="border: false" style="max-height: 500px; max-width: 100%; overflow: hidden;">
    <input type="hidden" id="txtParentId" value="@this.WorkContext.GetQueryString("parentid")" />
    @UIHelper.textBox(new TextBoxOption { ButtonText = string.Empty, Id = "txtSerialNumber", TabIndex = 1, LabelName = "编号" })
    @UIHelper.textBox(new TextBoxOption { ButtonText = string.Empty, Id = "txtName", TabIndex = 2, LabelName = "名称" })
    @UIHelper.textBox(new TextBoxOption { ButtonText = string.Empty, Id = "txtSpelling", TabIndex = 3, LabelName = "拼音" })
    @UIHelper.textBox(new TextBoxOption { ButtonText = string.Empty, Id = "txtAlias", TabIndex = 4, LabelName = "别名" })
    @UIHelper.dropDownList(new DropDownOption { Id = "ddlPriceMode", LabelName = "售价方式", TabIndex = 5, Value = "1", SelectPanelHeight = 70, SelectItems = new List<DropDownSelectItem> { new DropDownSelectItem { Text = "售价1", Value = "1" }, new DropDownSelectItem { Text = "售价2", Value = "2" }, new DropDownSelectItem { Text = "售价3", Value = "3" } } })
    @UIHelper.numberBox(new NumberBoxOption { Id = "txtCredits", TabIndex = 6, LabelName = "信用额度", Precision = 5, Value = "0.00000" })
    @UIHelper.textBox(new TextBoxOption { ButtonText = string.Empty, Id = "txtLinkMan", TabIndex = 7, LabelName = "联系人" })
    @UIHelper.textBox(new TextBoxOption { ButtonText = string.Empty, Id = "txtLinkTel", TabIndex = 8, LabelName = "联系人电话" })
    @UIHelper.textBox(new TextBoxOption { ButtonText = string.Empty, Id = "txtLinkAddress", TabIndex = 9, LabelName = "联系人地址" })
    @UIHelper.textBox(new TextBoxOption { ButtonText = string.Empty, Id = "txtZipCode", TabIndex = 10, LabelName = "邮编" })
    @UIHelper.textBox(new TextBoxOption { ButtonText = string.Empty, Id = "txtAddress", TabIndex = 11, LabelName = "地址" })
    @UIHelper.textBox(new TextBoxOption { ButtonText = string.Empty, Id = "txtSort", TabIndex = 12, LabelName = "排序" })
    @UIHelper.textBox(new TextBoxOption { ButtonText = string.Empty, Id = "txtComment", TabIndex = 13, LabelName = "备注", Multiline = true, Width = 520, Height = 100 })
</div>

@section scripts{
    <script type="text/javascript">
        $(document.body)
            .ready(function () {
                CPSSLib.Page.addClient.init();
            });
    </script>
}