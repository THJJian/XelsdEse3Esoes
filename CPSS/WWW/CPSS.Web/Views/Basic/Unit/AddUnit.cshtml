@using CPSS.Common.Core.Mvc.UIControl
@using CPSS.Service.ViewService.ViewModels.HeadButtons.Respond
@{
    ViewBag.Title = "AddUnit";
    WorkContext.Resource
        //.AddPageCss("")
        .AddPageScripts("easyui-1.5/locale/easyui-lang-zh_CN", "grid/tablegrid", "controlshelper", "basic/unit/addunit");
    var buttonModel = new List<RespondHeadButtonsViewModel>
    {
        new RespondHeadButtonsViewModel{ ButtonName = "rtBasicUnit_TB_Add_Save", ButtonText = "保存"},
        //new RespondHeadButtonsViewModel{ ButtonName = "rtBasicUnit_TB_Add_Save_Go", ButtonText = "保存并继续"},
        new RespondHeadButtonsViewModel{ ButtonName = "rtBasicUnit_TB_Add_Cancel", ButtonText = "取消"},
    };
}
@section buttons{
    @Html.Partial("~/Views/Shared/CommonPartial/HeadButtons.cshtml", buttonModel)
}

<div id="billhead" class="easyui-panel" data-options="border: false" style="max-height: 500px; max-width: 100%; overflow: hidden;">
    @UIHelper.textBox(new TextBoxOption { ButtonText = string.Empty, Id = "txtName", TabIndex = 2, LabelName = "名称" })
    @UIHelper.textBox(new TextBoxOption { ButtonText = string.Empty, Id = "txtSort", TabIndex = 4, LabelName = "排序", Value = "0" })
</div>
@section scripts{
    <script type="text/javascript">
        $(document.body)
            .ready(function () {
                CPSSLib.Page.addUnit.init();
            });
    </script>
}