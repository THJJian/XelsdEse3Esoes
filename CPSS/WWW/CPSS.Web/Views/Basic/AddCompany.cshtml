@using CPSS.Service.ViewService.ViewModels.HeadButtons.Respond
@{
    Layout = "~/views/shared/_layout.cshtml";
    WorkContext.Resource
        //.AddPageCss("")
        .AddPageScripts("easyui-1.5/locale/easyui-lang-zh_CN", "grid/tablegrid", "easyui-1.5/plugins/jquery.datagrid.cellediting", "controlshelper");
    var buttonModel = new List<RespondHeadButtonsViewModel>
    {
        new RespondHeadButtonsViewModel{ ButtonName = "rtBasicCom_TB_Add_Save", ButtonText = "保存"},
        new RespondHeadButtonsViewModel{ ButtonName = "rtBasicCom_TB_Add_Save_Go", ButtonText = "保存并继续"},
        new RespondHeadButtonsViewModel{ ButtonName = "rtBasicCom_TB_Add_Cancel", ButtonText = "取消"},
    };
}
@section buttons{
    @Html.Partial("~/Views/Shared/CommonPartial/HeadButtons.cshtml", buttonModel)
}

<div id="billhead" class="easyui-panel" data-options="border: false" style="max-height: 300px; max-width: 100%; overflow: hidden;">
    @UIHelper.textBox("test1", "测试测试1")
    @UIHelper.textBox("test2", "测试测试2", _tabIndex: 1)
    @UIHelper.textBox("test3", "测试测试3", _tabIndex: 2)
    @UIHelper.textBox("test4", "测试测试4", _tabIndex: 3)
    @UIHelper.textBox("test5", "测试测试5", _tabIndex: 4)
</div>
@section scripts{
    <script type="text/javascript">
        $(document.body)
            .ready(function() {
                $("#rtBasicCom_TB_Add_Cancel").on("click", function() {
                    parent._window.close();
                });
            });
    </script>
}
