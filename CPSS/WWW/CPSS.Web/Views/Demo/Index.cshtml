@{
    ViewBag.Title = "Index";
    WorkContext.Resource
        //.AddPageCss("")
        .AddPageScripts("controlshelper");
}

@section buttons{
    <div id="billbutton" class="easyui-panel" data-options="border: false" style="background: #2f4f4f; line-height: 35px; max-height: 35px; min-height: 35px; padding-right: 5px; text-align: right;">
        @UIHelper.linkButton("测试1", "button_test1")
        @UIHelper.linkButton("测试测试2", "button_test2")
    </div>
}

<div id="billhead" class="easyui-panel" data-options="border: false" style="max-height: 300px; max-width: 100%; overflow: hidden;">
    @UIHelper.textBox("test1", "测试测试1", _buttonText: "test1")
    @UIHelper.textBox("test2", "测试测试2", _buttonText: "test2")
    @UIHelper.textBox("test3", "测试测试3", _buttonText: "test3")
    @UIHelper.textBox("test4", "测试测试4", _buttonText: "test4")
    @UIHelper.textBox("test5", "测试测试5", _buttonText: "test5")
</div>

@section grid{
    <div id="billgrid" class="easyui-panel">

    </div>
}

@section scripts{
    <script type="text/javascript">
        $(document.body)
            .ready(function() {
                linkButtonHelper.init(function() {
                    var _self = $(this),
                        _id = _self.attr("id");
                    console.log(["id", _id].join(""));
                });

                textBoxHelper.init(function() {
                        debugger;
                        var _self = $(this),
                            _id = _self.attr("id"),
                            _value = textBoxHelper.getValue(_id);
                        console.log(["id:", _id, "  value:", _value].join(""));
                    },
                    function(_nVal_, _oVal_) {
                        var _self = $(this),
                            _id = _self.attr("id");
                        console.log(["id:", _id, "  newValue:", _nVal_, "  oldValue:", _oVal_].join(""));
                    });
            });
    </script>
}