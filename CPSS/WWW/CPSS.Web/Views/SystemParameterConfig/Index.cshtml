    <script type="text/javascript">
        $(document.body)
            .ready(function () {

                $("#container").css({ height: $(window).height() });
                $(".panel").css({ float: "left", padding: "1px 1px 0 1px" });
                $("#basic_set_panel,#price_set_panel,#bill_set_panel,#other_set_panel")
                    .panel({
                        tools: [
                            {
                                iconCls: "icon-save",
                                handler: function () {
                                    //debugger;
                                    var panel_id = $(this).parents("div.panel-header").next().attr("id").toLowerCase();
                                    switch (panel_id) {
                                        case "basic_set_panel":
                                            //TODO 保存相应更改
                                            _msgbox.alert("", panel_id);
                                            break;
                                        case "price_set_panel":
                                            //TODO 保存相应更改
                                            _msgbox.alert("", panel_id);
                                            break;
                                        case "bill_set_panel":
                                            //TODO 保存相应更改
                                            _msgbox.alert("", panel_id);
                                            break;
                                        case "other_set_panel":
                                            //TODO 保存相应更改
                                            _msgbox.alert("", panel_id);
                                            break;
                                    }
                                }
                            }
                        ]
                    });

            });
    </script>
}
